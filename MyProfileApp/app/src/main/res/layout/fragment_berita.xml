<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:elevation="4dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Berita Terkini"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_news_header"
            android:tint="#2196F3" />

    </LinearLayout>

    <!-- Search Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:layout_marginBottom="8dp"
        android:elevation="2dp">

        <EditText
            android:id="@+id/et_search_news"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:hint="Cari berita..."
            android:background="@drawable/search_news_background"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="14sp"
            android:textColor="#333333" />

        <Button
            android:id="@+id/btn_search"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Cari"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/button_search_background"
            android:textColor="#FFFFFF"
            android:layout_marginStart="8dp"
            android:paddingHorizontal="16dp" />

    </LinearLayout>

    <!-- Categories -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:paddingVertical="12dp"
        android:layout_marginBottom="8dp"
        android:elevation="2dp">

        <LinearLayout
            android:id="@+id/layout_categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp">

            <!-- Categories will be added dynamically -->

        </LinearLayout>

    </HorizontalScrollView>

    <!-- News List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_berita"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp" />

</LinearLayout>