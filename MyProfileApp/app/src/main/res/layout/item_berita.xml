<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/news_card_background"
    android:padding="16dp"
    android:layout_margin="8dp"
    android:elevation="2dp">

    <!-- News Image -->
    <ImageView
        android:id="@+id/iv_news_image"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:background="#E0E0E0"
        android:src="@drawable/news_placeholder"
        android:layout_marginBottom="12dp" />

    <!-- Category Badge -->
    <TextView
        android:id="@+id/tv_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/category_badge"
        android:paddingHorizontal="12dp"
        android:paddingVertical="4dp"
        android:text="Teknologi"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="8dp" />

    <!-- News Title -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Judul Berita yang Sangat Panjang dan Menarik Perhatian Pembaca"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginBottom="8dp" />

    <!-- News Summary -->
    <TextView
        android:id="@+id/tv_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ini adalah ringkasan berita yang memberikan gambaran singkat tentang isi berita lengkapnya..."
        android:textSize="14sp"
        android:textColor="#666666"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_marginBottom="12dp" />

    <!-- Bottom Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Author -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_author"
                android:tint="#666666"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/tv_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reporter Name"
                android:textSize="12sp"
                android:textColor="#666666" />

        </LinearLayout>

        <!-- Date -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_date"
                android:tint="#666666"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25 Des 2023"
                android:textSize="12sp"
                android:textColor="#666666" />

        </LinearLayout>

        <!-- Read Time -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="12dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_time"
                android:tint="#666666"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/tv_read_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 min"
                android:textSize="12sp"
                android:textColor="#666666" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>